@model web_voyager.Areas.TravelServices.Models.Hotel

@{
    ViewData["Title"] = "Book Hotel";
}

<div class="container mt-4">
    <div class="card booking-card">
        <div class="card-header">
            <h2>Book Hotel: @Model.Name - @Model.Location</h2>
        </div>
        <div class="card-body">
            <form asp-controller="Hotel" asp-action="SubmitBooking" asp-route-id="@Model.Id" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <p><strong>Name:</strong> @Model.Name</p>
                </div>
                <div class="form-group">
                    <p><strong>Location:</strong> @Model.Location</p>
                </div>
                <div class="form-group">
                    <p><strong>Price:</strong> $@Model.Price per night</p>
                </div>
                <div class="d-flex justify-content-between mt-3">
                    <a asp-controller="Hotel" asp-action="Index" class="btn light-button">Cancel</a>
                    <button type="submit" class="btn dark-button">Confirm Booking</button>
                </div>
            </form>
        </div>
    </div>
</div>
