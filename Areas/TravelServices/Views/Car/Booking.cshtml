@model web_voyager.Areas.TravelServices.Models.Car

@{
    ViewData["Title"] = "Book Car Rental";
}

<div class="container mt-4">
    <div class="card booking-card">
        <div class="card-header">
            <h2>Book Car Rental: @Model.Brand - @Model.Model</h2>
        </div>
        <div class="card-body">
            <form asp-controller="Car" asp-action="SubmitBooking" asp-route-id="@Model.Id" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <p><strong>Brand:</strong> @Model.Brand</p>
                </div>
                <div class="form-group">
                    <p><strong>Model:</strong> @Model.Model</p>
                </div>
                <div class="form-group">
                    <p><strong>Location:</strong> @Model.Location</p>
                </div>
                <div class="d-flex justify-content-between mt-3">
                    <a asp-controller="Car" asp-action="Index" class="btn light-button">Cancel</a>
                    <button type="submit" class="btn dark-button">Confirm Booking</button>
                </div>
            </form>
        </div>
    </div>
</div>
