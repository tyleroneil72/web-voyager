@model web_voyager.Areas.TravelServices.Models.Flight

@{
    ViewData["Title"] = "Book Flight";
}

<div class="container mt-4">
    <div class="card booking-card">
        <div class="card-header">
            <h2>Book Flight: @Model.Airline - @Model.Departure to @Model.Arrival</h2>
        </div>
        <div class="card-body">
            <form asp-controller="Flight" asp-action="SubmitBooking" asp-route-id="@Model.Id" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <p><strong>Departure:</strong> @Model.Departure</p>
                </div>
                <div class="form-group">
                    <p><strong>Arrival:</strong> @Model.Arrival</p>
                </div>
                <div class="d-flex justify-content-between mt-3">
                    <a asp-controller="Flight" asp-action="Index" class="btn light-button">Cancel</a>
                    <button type="submit" class="btn dark-button">Confirm Booking</button>
                </div>
            </form>
        </div>
    </div>
</div>
