@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid bg-light p-5 text-center">
    <h1 class="display-4">Welcome to Web Voyager</h1>
    <p class="lead"><i class="fa-solid fa-globe me-1"></i>Travel. <span class="text-purple">Explore</span>. Discover.
    </p>
</div>

<!-- Featured Products -->
<!-- Images Generated by OpenAI's Dall E -->
<div class="container my-5">
    <h2 class="mb-3">Book Your Travel</h2>
    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card">
                <img src="https://web-voyager.s3.amazonaws.com/flight.webp" class="card-img-top" alt="Destination 1">
                <div class="card-body">
                    <h5 class="card-title">Book a Flight</h5>
                    <p class="card-text">Find the best deals and fly to your desired destination.</p>
                    <a asp-controller="Flight" asp-action="Index" class="btn light-button">Book Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card">
                <img src="https://web-voyager.s3.amazonaws.com/hotel.webp" class="card-img-top" alt="Destination 2">
                <div class="card-body">
                    <h5 class="card-title">Book a Hotel</h5>
                    <p class="card-text">Choose from a variety of accommodations for your stay.</p>
                    <a asp-controller="Hotel" asp-action="Index" class="btn light-button">Book Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card">
                <img src="https://web-voyager.s3.amazonaws.com/car.webp" class="card-img-top" alt="Destination 3">
                <div class="card-body">
                    <h5 class="card-title">Book a Car Rental</h5>
                    <p class="card-text">Rent a car for convenient transportation during your trip.</p>
                    <a asp-controller="Car" asp-action="Index" class="btn light-button">Book Now</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Testimonials -->
<div class="container my-5">
    <h2 class="mb-3">What Our Travelers Say</h2>
    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="testimonial bg-light p-3">
                <p class="mb-0">"An unforgettable journey through Italy. The booking process was seamless, and the trip
                    exceeded all expectations!"</p>
                <br>
                <footer class="blockquote-footer">Jane Doe</footer>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="testimonial bg-light p-3">
                <p class="mb-0">"Exploring Japan with Web Voyager was a dream come true. Highly recommended for any
                    travel enthusiast!"</p>
                <br>
                <footer class="blockquote-footer">John Smith</footer>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="testimonial bg-light p-3">
                <p class="mb-0">"The most vibrant and exciting trip to New York. From booking to landing, everything was
                    perfectly organized."</p>
                <br>
                <footer class="blockquote-footer">Emily White</footer>
            </div>
        </div>
    </div>
</div>