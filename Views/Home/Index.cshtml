@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid bg-light p-5 text-center">
    <h1 class="display-4">Welcome to Web Voyager</h1>
    <p class="lead"><i class="fa-solid fa-globe me-1"></i>Explore. Dream. Discover</p>
</div>

<!-- Featured Destinations -->
<div class="container my-5">
    <h2 class="mb-3">Featured Destinations</h2>
    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card">
                <img src="https://via.placeholder.com/150" class="card-img-top" alt="Destination 1">
                <div class="card-body">
                    <h5 class="card-title">Paris, France</h5>
                    <p class="card-text">Experience the romantic city of lights and its enchanting landmarks.</p>
                    <a href="#" class="btn btn-primary">Explore</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card">
                <img src="https://via.placeholder.com/150" class="card-img-top" alt="Destination 2">
                <div class="card-body">
                    <h5 class="card-title">Kyoto, Japan</h5>
                    <p class="card-text">Discover ancient temples and the serene beauty of cherry blossoms.</p>
                    <a href="#" class="btn btn-primary">Explore</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card">
                <img src="https://via.placeholder.com/150" class="card-img-top" alt="Destination 3">
                <div class="card-body">
                    <h5 class="card-title">New York, USA</h5>
                    <p class="card-text">Dive into the bustling streets and iconic landmarks of the Big Apple.</p>
                    <a href="#" class="btn btn-primary">Explore</a>
                </div>
            </div>
        </div>
    </div>
</div>

